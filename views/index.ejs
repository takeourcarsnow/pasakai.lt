                        <span class="age-emoji">📖</span>
                        <span class="age-text">7-9 metų vaikams</span>
                    </div>
                </div>
            </div>

            <button id="generate-btn" class="generate-button">
                <span class="button-text">Sukurti pasaką ✨</span>
                <div class="button-magic" aria-hidden="true"></div>
            </button>
        </div>

        <div class="story-container">
            <!-- Loading Animation -->
            <div class="loading-animation">
                <div class="loading-text">Kuriama pasaka...</div>
                <div class="loading-dots">
                    <div class="loading-dot"></div>
                    <div class="loading-dot"></div>
                    <div class="loading-dot"></div>
                </div>
                <div class="loading-messages"></div>
                <div class="loading-sparkles"></div>
            </div>

            <!-- Story Content -->
            <div class="story-content">
                <div class="story-header">
                    <h3>✨ Tavo pasaka paruošta!</h3>
                </div>
                <div id="story-text"></div>
                <div class="share-buttons">
                    <button class="share-btn copy" id="copy-btn">
                        <span class="share-icon">📋</span>
                        <span class="share-text">Kopijuoti pasaką</span>
